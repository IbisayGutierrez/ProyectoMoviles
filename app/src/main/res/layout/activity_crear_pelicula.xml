<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tomarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CrearPelicula">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImagen"
            android:layout_width="196dp"
            android:layout_height="107dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPelicula"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:id="@+id/textViewPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="33dp"
            android:text="@string/tituloPelicula"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/txtCodigo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/codigo"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.308"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/duracion" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@drawable/titulo" />

        <EditText
            android:id="@+id/txtDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="@string/duracion"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.248"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

        <EditText
            android:id="@+id/txtGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/genero"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDuracion" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="268dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/codigo" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:srcCompat="@drawable/genero" />

        <EditText
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/titulo"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.308"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo" />

        <EditText
            android:id="@+id/txtlatitud"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Latitud"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/txtGenero" />

        <EditText
            android:id="@+id/txtlongitud"
            android:layout_width="108dp"
            android:layout_height="43dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="122dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Longitud"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtlatitud"
            app:layout_constraintTop_toBottomOf="@+id/txtGenero" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="455dp"
            android:onClick="AbrirMapa"
            android:text=""
            android:textColor="@android:color/white"
            app:backgroundTint="#1976D2"
            app:cardElevation="6dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/add_location"
            app:layout_constraintStart_toEndOf="@+id/txtlongitud"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:srcCompat="@drawable/mundo" />

        <TextView
            android:id="@+id/textViewAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Audio de la PelÃ­cula"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtlatitud" />

        <LinearLayout
            android:id="@+id/layoutAudioControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textViewAudio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarGrabacion"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:onClick="iniciarGrabacion"
                android:text=""
                android:textSize="12sp"
                app:icon="@drawable/mic"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="?attr/colorPrimary"
                app:backgroundTint="#D32F2F"
                app:cornerRadius="20dp"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetenerGrabacion"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:onClick="detenerGrabacion"
                android:text=""
                android:textSize="12sp"
                app:icon="@drawable/stop"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="?attr/colorPrimary"
                app:backgroundTint="#D32F2F"
                app:cornerRadius="20dp"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReproducirAudio"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:onClick="reproducirAudio"
                android:text=""
                android:textSize="12sp"
                android:textColor="@android:color/white"
                app:icon="@drawable/play"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                app:backgroundTint="#1976D2"
                app:cornerRadius="20dp"
                app:cardElevation="6dp"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:onClick="Insertar"
            android:text="@string/guardar"
            android:textColor="@android:color/white"
            app:backgroundTint="#1976D2"
            app:cornerRadius="20dp"
            app:cardElevation="6dp"
            app:rippleColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnCancelar"
            app:layout_constraintTop_toBottomOf="@+id/layoutAudioControls"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:onClick="Regresar"
            android:text="@string/cancelar"
            android:textColor="@android:color/white"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="20dp"
            app:cardElevation="6dp"
            app:rippleColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAudioControls"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="186dp"
            android:onClick="tomarFoto"
            android:text=""
            app:backgroundTint="#1976D2"
            app:cardElevation="6dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/camara"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImagen"
            app:rippleColor="?attr/colorPrimary" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>