<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- PELÃCULA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_pelicula"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/txtCodigoPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/codigo_pelicula"
            android:inputType="number" />

        <Button
            android:id="@+id/btnBuscarPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnBuscarPelicula_Click"
            android:text="@string/buscar_pelicula" />

        <TextView
            android:id="@+id/txtTituloPelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_pelicula_placeholder"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:paddingBottom="16dp" />

        <!-- FECHA Y HORA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha_hora"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fecha"
            android:focusable="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="seleccionarFecha"
            android:text="@string/seleccionar_fecha" />

        <EditText
            android:id="@+id/txtHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hora"
            android:focusable="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="seleccionarHora"
            android:text="@string/seleccionar_hora" />

        <!-- CLIENTE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cliente"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/txtCedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cedula" />

        <Button
            android:id="@+id/btnBuscarCliente"
            android:onClick="btnBuscarCliente_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buscar_cliente" />

        <TextView
            android:id="@+id/txtNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_cliente"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:paddingBottom="8dp" />

        <!-- ASIENTO -->
        <EditText
            android:id="@+id/txtAsiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/asiento"
            android:inputType="textCapCharacters" />

        <!-- Botones Agregar, Editar, Eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnAgregar"
                android:onClick="btnAgregar_Click"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_agregar" />

            <Button
                android:id="@+id/btnEditar"
                android:onClick="btnEditar_Click"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_editar" />

            <Button
                android:id="@+id/btnEliminar"
                android:onClick="btnEliminar_Click"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_eliminar" />
        </LinearLayout>

        <!-- Lista de Funciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/funciones_agregadas"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/listDetalleFuncion"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <!-- Botones principales -->
        <Button
            android:id="@+id/btnGuardarFuncion"
            android:onClick="btnGuardarFuncion_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_guardar_funciones"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnConsultar"
            android:onClick="btnConsultar_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ver_funciones" />

        <Button
            android:id="@+id/btnLimpiar"
            android:onClick="btnLimpiar_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_limpiar" />

        <Button
            android:id="@+id/btnSalir"
            android:onClick="btnSalir_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_salir" />

    </LinearLayout>

</ScrollView>